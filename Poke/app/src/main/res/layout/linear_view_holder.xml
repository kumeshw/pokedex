<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/colorSILVER">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/colorLIGHTTAN"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/pokemon_card_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                >

                <ImageView
                    android:id="@+id/imageview_front_default"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_toStartOf="@+id/center_space"
                    android:layout_toLeftOf="@+id/center_space"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/textview_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:layout_toEndOf="@+id/center_space"
                    android:layout_toRightOf="@+id/center_space"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/app_name"
                    />

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/center_space"
                    android:layout_toRightOf="@+id/center_space"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/placeholder_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:id="@+id/center_space"
                    android:layout_width="10dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>